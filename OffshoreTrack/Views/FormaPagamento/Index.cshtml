@model List<OffshoreTrack.Models.FormaPagamento>
@{
    ViewData["Title"] = "Index";
}

<div class="pagetitle">
    <div class="row">
        <div class="col-md-6">
            <h1 class="display-4">Forma de Pagamento</h1>
        </div>
        <div class="col-md-6">
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <a class="btn btn-primary" role="button" asp-area="" asp-controller="FormaPagamento" asp-action="New"> Cadastrar novo </a>
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-lg-12">

        <div class="card">
            <br />
            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Forma de pagamento</th>
                            <th scope="col">Descrição</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.formaPagamento</td>
                                <td>@item.descricao</td>
                                <td>
                                    <a class="btn btn-primary" href="FormaPagamento/Read/@item.id_formaPagamento"><i class="bi bi-eye"></i></a>
                                    <a class="btn btn-success" href="FormaPagamento/Edit/@item.id_formaPagamento"><i class="bi bi-pencil"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>

