@model List<OffshoreTrack.Models.Material>
@{
    ViewData["Title"] = "Index";
}

<div class="pagetitle">
    <div class="row">
        <div class="col-md-6">
            <h1 class="display-4">Materiais</h1>
        </div>
        <div class="col-md-6">
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <a class="btn btn-primary" role="button" asp-area="" asp-controller="Material" asp-action="New"> Cadastrar novo </a>
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-lg-12">

        <div class="card">
            <br />
            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Material</th>
                            <th scope="col">Tipo</th>
                            <th scope="col">Setor</th>
                            <th scope="col">Local</th>
                            <th scope="col">Número Série</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.material</td>
                                <td>@item.tipo?.tipo</td>
                                <td>@item.setor?.setor</td>
                                <td>@item.local?.local</td>
                                <td>@item.numeroSerie</td>
                                <td>
                                    <a class="btn btn-primary" href="Material/Read/@item.id_material"><i class="bi bi-eye"></i></a>
                                    <a class="btn btn-success" href="Material/Edit/@item.id_material"><i class="bi bi-pencil"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>

