@model List<OffshoreTrack.Models.ParteSolta>
@{
    ViewData["Title"] = "Index";
}

<div class="pagetitle">
    <div class="row">
        <div class="col-md-6">
            <h1 class="display-4">Partes Soltas</h1>
        </div>
        <div class="col-md-6">
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <a class="btn btn-primary" role="button" asp-area="" asp-controller="ParteSolta" asp-action="New"> Cadastrar novo </a>
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-lg-12">

        <div class="card">
            <br />
            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Parte Solta</th>
                            <th scope="col">Material</th>
                            <th scope="col">Fornecedor</th>
                            <th scope="col">Quantidade</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.partesolta</td>
                                <td>@item.material?.material</td>
                                <td>@item.fornecedor?.fornecedor</td>
                                <td>@item.quantidade</td>

                                <td>
                                <a class="btn btn-primary" asp-controller="ParteSolta" asp-action="Read" asp-route-id="@item.id_partesolta"><i class="bi bi-eye"></i></a>
                                <a class="btn btn-success" asp-controller="ParteSolta" asp-action="Edit" asp-route-id="@item.id_partesolta"><i class="bi bi-pencil"></i></a>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>

