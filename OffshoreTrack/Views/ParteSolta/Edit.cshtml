@model OffshoreTrack.Models.ParteSolta
@{
ViewData["Title"]="Edit";
}

<div class="pagetitle">
    <div class="row">
        <div class="col-md-6">
            <h1 class="display-4">Editar: ParteSolta</h1>
        </div>

        <div class="col-md-6">
            <div class="d-grid gap-2d-md-flex justify-content-md-end">
                <a class="btn btn-primary"role="button"asp-area=""asp-controller="ParteSolta"asp-action="Index">Voltar</a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">

                <form method="post" action="/ParteSolta/Update">
                    <input type="hidden" asp-for="id_partesolta" />

                    <label for="inputText" class="col-sm col-form-label">Parte Solta:</label>
                    <input type="text" class="form-control" id="partesolta" asp-for="partesolta" />
                    <br/>

                   <label for="inputText" class="col-sm col-form-label">Quantidade:</label>
                    <input type="number" class="form-control" id="quantidade" asp-for="quantidade" />
                    <br/>

                    <div class="form-group">
                        <label asp-for="id_oc" class="col-sm col-form-label">Ordem de Compra:</label>
                        <select asp-for="id_oc" class="form-control" asp-items="@ViewBag.oc"></select>
                        <span asp-validation-for="id_oc" class="text-danger"></span>
                    </div>
                    <br />

                    <div class="form-group">
                        <label asp-for="id_material" class="col-sm col-form-label">Material:</label>
                        <select asp-for="id_material" class="form-control" asp-items="@ViewBag.material"></select>
                        <span asp-validation-for="id_material" class="text-danger"></span>
                    </div>
                    <br />
                    
                    <div class="form-group">
                        <label asp-for="anexo" class="col-sm col-form-label">Anexo:</label>
                        <input class="form-control" type="file" id="anexo" name="anexo">
                        <br />
                        @if (Model.anexo != null)
                        {
                            <a href= "@Url.Action("Download", "ParteSolta", new { id = Model.id_partesolta })" >Baixar anexo existente</a>
                        }
                    </div>
                    <br>
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <button type="submit" class="btn btn-success" name="submit" value="submit">Atualizar</button>
                </form>
                <form method="post"action="/ParteSolta/Delete">
                    <input type="hidden"asp-for="id_partesolta"/>
                    <button type="submit"class="btn btn-danger">Deletar</button>
                </form>
                    </div>
        </div>
    </div>
</div>

