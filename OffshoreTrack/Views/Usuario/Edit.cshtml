@model OffshoreTrack.Models.Usuario

@{
    ViewData["Title"] = "Edit";
}

<div class="pagetitle">
    <div class="row">
        <div class="col-md-6">
            <h1 class="display-4">Editar: Usuário</h1>
        </div>

        <div class="col-md-6">
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <a class="btn btn-primary" role="button" asp-area="" asp-controller="Usuario" asp-action="Index">Voltar</a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">

            <form method="post" action="/Usuario/Update">
                <input type="hidden" asp-for="id_usuario" />

                <div class="form-group">
                    <label for="usuario" class="col-form-label">Usuário:</label>
                    <input type="text" class="form-control" id="usuario" name="usuario" asp-for="usuario" />
                </div>
                <br />
                <div class="form-group">
                    <label for="usuario" class="col-form-label">Nome:</label>
                    <input type="text" class="form-control" id="nome" name="nome" asp-for="nome" />
                </div>
                <br />


                <div class="form-group">
                    <label for="cpf" class="col-form-label">CPF:</label>
                    <input type="text" class="form-control" id="cpf" name="cpf" asp-for="cpf" />
                </div>
                <br />

                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label for="senha" class="col-form-label">Senha:</label>
                            <input type="password" class="form-control" id="senha" name="senha" asp-for="senha" />
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label for="senha2" class="col-form-label">Confirma Senha:</label>
                            <input type="password" class="form-control" id="senha2" name="senha2" />
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label for="email" class="col-form-label">E-mail:</label>
                    <input type="text" class="form-control" id="email" name="email" asp-for="email" />
                </div>
                <br />

                <div class="form-group">
                    <label for="id_permissao" class="col-form-label">Permissão:</label>
                    <select class="form-control" id="id_permissao" name="id_permissao" asp-for="id_permissao" asp-items="@ViewBag.PermissaoList"></select>
                </div>
                <br />

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="submit" class="btn btn-success" name="submit" value="submit">Atualizar</button>
                </div>
            </form>



                <form method="post" action="/Usuario/Delete">
                    <input type="hidden" asp-for="id_usuario" />
                    <button type="submit" class="btn btn-danger">Deletar</button>
                </form>
            </div>
        </div>
    </div>
</div>
