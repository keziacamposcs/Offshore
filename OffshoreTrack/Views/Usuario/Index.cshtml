@model List<OffshoreTrack.Models.Usuario>
@{
    ViewData["Title"] = "Index";
}

<div class="pagetitle">
    <div class="row">
        <div class="col-md-6">
            <h1 class="display-4">Usuários</h1>
        </div>
        <div class="col-md-6">
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <a class="btn btn-primary" role="button" asp-area="" asp-controller="Usuario" asp-action="New"> Cadastrar novo </a>
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-lg-12">

        <div class="card">
            <br />
            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Usuário</th>
                            <th scope="col">Nome</th>
                            <th scope="col">Tipo de Permissão</th>

                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.usuario</td>
                                <td>@item.nome</td>
                                <td>@item.Permissao?.nome_permissao</td>
                                <td>
                                    <a class="btn btn-primary" href="Usuario/Read/@item.id_usuario"><i class="bi bi-eye"></i></a>
                                    <a class="btn btn-success" href="Usuario/Edit/@item.id_usuario"><i class="bi bi-pencil"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#tableUsuario').DataTable();
        });
    </script>
    }
