usingMicrosoft.AspNetCore.Mvc;
usingSystem;
usingSystem.Data;
usingSystem.Reflection.Emit;
usingSystem.Xml.Linq;

@model OffshoreTrack.Models.Criticidade

@{
ViewData["Title"]="Edit";
}

<div class="pagetitle">
    <div class="row">
        <div class="col-md-6">
            <h1 class="display-4">Editar: Criticidade</h1>
        </div>

        <div class="col-md-6">
            <div class="d-grid gap-2d-md-flex justify-content-md-end">
                <a class="btn btn-primary"role="button"asp-area=""asp-controller="Criticidade"asp-action="Index">Voltar</a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">

                <form method="post" action="/Criticidade/Update">
                    <input type="hidden" asp-for="id_criticidade" />

                    <label for="inputText" class="col-sm col-form-label">Criticidade:</label>
                    <input type="text" class="form-control" id="criticidade" asp-for="criticidade" />
                    <br/>

                    <div class="d-gridgap-2d-md-flexjustify-content-md-end">
                        <button type="submit" class="btn btn-primary" name="submit" value="submit">Atualizar</button>
                </form>
                <form method="post"action="/Criticidade/Delete">
                    <input type="hidden"asp-for="id_criticidade"/>
                    <button type="submit"class="btn btn-danger">Deletar</button>
                </form>
                    </div>
        </div>
    </div>
</div>

