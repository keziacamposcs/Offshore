@model List<OffshoreTrack.Models.Certificacao>
@{
    ViewData["Title"] = "Index";
}

<div class="pagetitle">
    <div class="row">
        <div class="col-md-6">
            <h1 class="display-4">Certificações</h1>
        </div>
        <div class="col-md-6">
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <a class="btn btn-primary" role="button" asp-area="" asp-controller="Certificacao" asp-action="New"> Cadastrar novo </a>
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-lg-12">

        <div class="card">
            <br />
            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Certificação</th>
                            <th scope="col">Orgão Emissor</th>
                            <th scope="col">Data Emissão</th>
                            <th scope="col">Data Validade</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.certificacao</td>
                                <td>@item.orgaoEmissor</td>
                                <td>@item.dataEmissao.ToShortDateString()</td>
                                <td>@(item.dataValidade.HasValue ? item.dataValidade.Value.ToShortDateString() : "N/A")</td>
                                <td>
                                    <a class="btn btn-primary" href="Certificacao/Read/@item.id_certificacao"><i class="bi bi-eye"></i></a>
                                    <a class="btn btn-success" href="Certificacao/Edit/@item.id_certificacao"><i class="bi bi-pencil"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>

