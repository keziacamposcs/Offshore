@model OffshoreTrack.Models.Certificacao

@{
    ViewData["Title"] = "Read";
}

<div class="pagetitle">
    <div class="row">
        <div class="col-md-6">
            <h1 class="display-4">Visualização: Certificação</h1>
        </div>
        <div class="col-md-6">
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <a class="btn btn-primary" role="button" asp-area="" asp-controller="Certificacao" asp-action="Index">Voltar</a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                    <label for="inputText" class="col-sm col-form-label">Certificação:</label>
                    <input type="text" class="form-control" id="certificacao" name="certificacao" asp-for="certificacao" readonly/>
                    <br />

                    <label for="inputText" class="col-sm col-form-label">Orgão Emissor:</label>
                    <input type="text" class="form-control" id="orgaoEmissor" name="orgaoEmissor" asp-for="orgaoEmissor" readonly/>
                    <br />

                    <div class="row">
                        <div class="col">
                            <label for="inputText" class="col-sm col-form-label">Data de Emissão:</label>
                            <input type="date" class="form-control" id="dataEmissao" name="dataEmissao" asp-for="dataEmissao" readonly/>
                            <br />
                        </div>
                        <div class="col">
                            <label for="inputText" class="col-sm col-form-label">Data de Validade:</label>
                            <input type="date" class="form-control" id="dataValidade" name="dataValidade" asp-for="dataValidade" readonly/>
                            <br />
                        </div>
                    </div>

                <label for="anexo" class="form-label">Anexo:</label>
                @if(Model.anexo != null && Model.anexo.Length > 0)
                {
                    <a class="btn btn-secondary" href="@Url.Action("DownloadAnexo", "Certificacao", new { id = Model.id_certificacao })">Baixar Anexo</a>
                    <br>
                }
                else
                {
                    <p>Sem Anexo</p>
                }
                <br />
            </div>
        </div>
    </div>
</div>

