@model OffshoreTrack.Models.Certificacao

@{
    ViewData["Title"] = "New";
}

<div class="pagetitle">
    <h1 class="display-4"> Cadastrar: Certificação</h1>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <form method="post" action="Create" enctype="multipart/form-data">

                    <label for="inputText" class="col-sm col-form-label">Certificação:</label>
                    <input type="text" class="form-control" id="certificacao" name="certificacao" asp-for="certificacao" />
                    <br />

                    <label for="inputText" class="col-sm col-form-label">Orgão Emissor:</label>
                    <input type="text" class="form-control" id="orgaoEmissor" name="orgaoEmissor" asp-for="orgaoEmissor" />
                    <br />

                    <div class="row">
                        <div class="col">
                            <label for="inputText" class="col-sm col-form-label">Data de Emissão:</label>
                            <input type="date" class="form-control" id="dataEmissao" name="dataEmissao" asp-for="orgaoEmissor" />
                            <br />
                        </div>
                        <div class="col">
                            <label for="inputText" class="col-sm col-form-label">Data de Validade:</label>
                            <input type="date" class="form-control" id="dataValidade" name="dataValidade" asp-for="orgaoEmissor" />
                            <br />
                        </div>
                    </div>
                    <br />

                    <label for="anexo" class="form-label">Anexar arquivo:</label>
                    <input class="form-control" type="file" id="anexoFile" name="anexoFile">
                    <br>


                    <button type="submit" class="btn btn-primary" name="submit" value="submit">Cadastrar</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.inputmask/3.3.4/jquery.inputmask.bundle.min.js"></script>

}
