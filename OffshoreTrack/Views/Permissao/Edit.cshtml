@model OffshoreTrack.Models.Permissao
@{
    ViewData["Title"] = "Edit";
}

<div class="pagetitle">
    <div class="row">
        <div class="col-md-6">
            <h1 class="display-4">Editar: Permissão</h1>
        </div>
        <div class="col-md-6">
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <a class="btn btn-primary" asp-action="Index" role="button">Voltar</a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <form asp-action="Update" method="post">
                    <input type="hidden" asp-for="id_permissao" />

                    <div class="form-group">
                        <label asp-for="nome_permissao" class="control-label"></label>
                        <input asp-for="nome_permissao" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label><input type="checkbox" asp-for="pode_criar"> Pode Criar</label>
                    </div>
                    <div class="form-group">
                        <label><input type="checkbox" asp-for="pode_ler"> Pode Ler</label>
                    </div>
                    <div class="form-group">
                        <label><input type="checkbox" asp-for="pode_atualizar"> Pode Atualizar</label>
                    </div>
                    <div class="form-group">
                        <label><input type="checkbox" asp-for="pode_deletar"> Pode Deletar</label>
                    </div>
                    <div class="form-group">
                        <label><input type="checkbox" asp-for="permissao_admin"> Permissão de Administrador</label>
                    </div>


                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <button type="submit" class="btn btn-success" name="submit" value="submit">Atualizar</button>
                </form>
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="id_permissao" />
                    <button type="submit" class="btn btn-danger">Deletar</button>
                </form>
                    </div>
            </div>
        </div>
    </div>
</div>
