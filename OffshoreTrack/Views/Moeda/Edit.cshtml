@model OffshoreTrack.Models.Moeda
@{
ViewData["Title"]="Edit";
}

<div class="pagetitle">
    <div class="row">
        <div class="col-md-6">
            <h1 class="display-4">Editar: Moeda</h1>
        </div>

        <div class="col-md-6">
            <div class="d-grid gap-2d-md-flex justify-content-md-end">
                <a class="btn btn-primary"role="button"asp-area=""asp-controller="Moeda"asp-action="Index">Voltar</a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">

                <form method="post" action="/Moeda/Update">
                    <input type="hidden" asp-for="id_moeda" />

                    <label for="inputText" class="col-sm col-form-label">Moeda:</label>
                    <input type="text" class="form-control" id="moeda_descricao" name="moeda_descricao" value="@Model.moeda_descricao" />
                    <br/>

                    <label for="inputText" class="col-sm col-form-label">Símbolo:</label>
                    <input type="text" class="form-control" id="simbolo" name="simbolo" value="@Model.simbolo" />
                    <br/>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="submit" class="btn btn-success">Atualizar</button>
                </form>
                <form method="post"action="/Moeda/Delete">
                    <input type="hidden"asp-for="id_moeda"/>
                    <button type="submit"class="btn btn-danger">Deletar</button>
                </form>
                    </div>
        </div>
    </div>
</div>

