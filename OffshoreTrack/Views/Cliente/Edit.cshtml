usingMicrosoft.AspNetCore.Mvc;
usingSystem;
usingSystem.Data;
usingSystem.Reflection.Emit;
usingSystem.Xml.Linq;

@model OffshoreTrack.Models.Cliente

@{
ViewData["Title"]="Edit";
}

<div class="pagetitle">
    <div class="row">
        <div class="col-md-6">
            <h1 class="display-4">Editar: Cliente</h1>
        </div>

        <div class="col-md-6">
            <div class="d-grid gap-2d-md-flex justify-content-md-end">
                <a class="btn btn-primary"role="button"asp-area=""asp-controller="Cliente"asp-action="Index">Voltar</a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">

                <form method="post" action="/Cliente/Update">
                    <input type="hidden" asp-for="id_cliente" />

                    <label for="inputText" class="col-sm col-form-label">Cliente:</label>
                    <input type="text" class="form-control" id="cliente" asp-for="cliente" />
                    <br/>

                    <label for="inputText" class="col-sm col-form-label">CNPJ:</label>
                    <input type="text" class="form-control" id="cnpj" asp-for="cnpj" />
                    <br/>
                    <div class="d-gridgap-2d-md-flexjustify-content-md-end">
                        <button type="submit" class="btn btn-primary" name="submit" value="submit">Atualizar</button>
                </form>
                <form method="post"action="/Cliente/Delete">
                    <input type="hidden"asp-for="id_cliente"/>
                    <button type="submit"class="btn btn-danger">Deletar</button>
                </form>
                    </div>
        </div>
    </div>
</div>

