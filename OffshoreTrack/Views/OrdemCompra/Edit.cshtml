@model OffshoreTrack.Models.OrdemCompra

@{
    ViewData["Title"] = "Editar: Ordem de Compra";
}

<div class="pagetitle">
    <div class="row">
        <div class="col-md-6">
            <h1 class="display-4">Editar: Ordem de Compra</h1>
        </div>

        <div class="col-md-6">
            <div class="d-grid gap-2d-md-flex justify-content-md-end">
                <a class="btn btn-primary"role="button"asp-area=""asp-controller="OrdemCompra"asp-action="Index">Voltar</a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <form method="post" action="@Url.Action("Update", "OrdemCompra", new { id = Model.id_oc })" enctype="multipart/form-data">

                    <input type="hidden" asp-for="id_oc"/>

                    <!-- Definicao de Moeda -->
                    <div class="row">
                        <div class="col-sm-12">
                            <label asp-for="id_moeda" class="col-sm col-form-label">Moeda:</label>
                            <select asp-for="id_moeda" class="form-control" asp-items="ViewBag.moeda"></select>
                        </div>
                    </div>
                    <!-- Fim - Definicao de Moeda -->

                    <div class="row">
                        <div class="col-sm-9">
                            <label for="inputText" class="col-sm col-form-label">Ordem de Compra:</label>
                            <input type="text" class="form-control" id="oc" name="oc" asp-for="oc" />
                            <br />
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group">
                                <label asp-for="prioridade" class="col-sm col-form-label">Prioridade:</label>
                                <select class="form-select" asp-for="prioridade">
                                    <option value="Baixa">Baixa</option>
                                    <option value="Média">Média</option>
                                    <option value="Alta">Alta</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <label for="inputText" class="col-sm col-form-label">Observação:</label>
                            <textarea type="text" rows="3" class="form-control" id="observacao" name="observacao" asp-for="observacao" ></textarea>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <label for="inputText" class="col-sm col-form-label">Data:</label>
                            <input type="date" class="form-control" id="data_oc" name="data_oc" asp-for="data_oc" value="@(Model.data_oc?.ToString("yyyy-MM-dd"))" readonly/>
                        </div>
                        <div class="col">
                            <label for="inputText" class="col-sm col-form-label">Data prevista:</label>
                            <input type="date" class="form-control" id="data_prevista" name="data_prevista" asp-for="data_prevista" />
                        </div>
                        <div class="col">
                            <label for="inputText" class="col-sm col-form-label">Data de Conclusão da OC:</label>
                            <input type="date" class="form-control" id="data_conclusao" name="data_conclusao" asp-for="data_conclusao" />
                        </div>
                    </div>

                    <h5>Itens</h5>
                    <button class="btn btn-primary" type="button" id="btnAdicionarItem"><i class="bi bi-plus"></i> Adicionar Item</button>
                    <br>
                    
                    @if (Model.Itens != null && Model.Itens.Any())
                    { 
                        @foreach (var item in Model.Itens)
                        {
                            <input type="hidden" asp-for="Itens[@item.id_item].id_item" />
                            <div class="row" id="itemRow@item.id_item">
                                <div class="col-sm-5">
                                    <label for="items[@item.id_item].item">Item:</label>
                                    <input type="text" class="form-control" id="items[@item.id_item].item" name="Itens[@item.id_item].item" value="@item.item" />
                                </div>
                                <div class="col-sm-3">
                                    <label for="items[@item.id_item].quantidade">Quantidade:</label>
                                    <input type="number" class="form-control" id="items[@item.id_item].quantidade" name="Itens[@item.id_item].quantidade" value="@item.quantidade" />
                                </div>
                                <div class="col-sm-3">
                                    <label for="items[@item.id_item].valor">Valor:</label>
                                    <input type="text" class="form-control" id="items[@item.id_item].valor" name="Itens[@item.id_item].valor" value="@item.valor" />
                                </div>
                                <div class="col-sm-1">
                                    <button class="btn btn-danger" data-id="@item.id_item" style="width: 50px; height:50px;margin-top:15px;"><i class="bi bi-trash"></i></button>
                                </div>
                            </div>
                        }
                    }
                    <div id="itensContainer"></div>
                    <br>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <h5>Total Anterior: </h5>
                        <p id="moedaSimbolo">@Model.moeda.simbolo</p><p>@Model.total</p>
                        <p>|</p>
                        <h5>Total: </h5>
                        <p>
                            <p id="moedaSimbolo"></p>
                            <span id="displayTotal">0</span>
                            <input type="hidden" id="total" name="total">
                        </p>                        
                    </div>

                    <hr>
                    <div class="col">
                        <div class="form-group">
                            <div class="row">
                                <h5>Rateio</h5>
                                <div class="col-sm-3">
                                    <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="sem_rateio">
                                    <label class="form-check-label">
                                        Sem Rateio
                                    </label>
                                    </div>
                                </div>
                                <div class="col-sm-9">
                                    <label asp-for="id_rateio" class="col-sm col-form-label">Rateio:</label>
                                    <select asp-for="id_rateio" class="form-control" asp-items="@ViewBag.rateio"></select>
                                    <input type="hidden" asp-for="id_rateio" id="hiddenRateio" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <br>

                    <h5>Fornecedor</h5>
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label asp-for="id_fornecedor" class="col-sm col-form-label">Fornecedor Principal:</label>
                                <select asp-for="id_fornecedor" class="form-control" asp-items="@ViewBag.fornecedor"></select>
                                <div class="form-text"></div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label asp-for="id_fornecedor2" class="col-sm col-form-label">Fornecedor 2: </label>
                                <select asp-for="id_fornecedor2" class="form-control" asp-items="@ViewBag.fornecedor2"></select>
                                <div class="form-text">O fornecedor escolhido será a 2º opção.</div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label asp-for="id_fornecedor3" class="col-sm col-form-label">Fornecedor 3:</label>
                                <select asp-for="id_fornecedor3" class="form-control" asp-items="@ViewBag.fornecedor3"></select>
                                <div class="form-text">O fornecedor escolhido será a 3º opção.</div>
                            </div>
                        </div>
                    </div>
                    <br>

                    <div class="col">
                        <div class="form-group">
                            <label asp-for="id_setor" class="col-sm col-form-label">Setor Solicitante:</label>
                            <select asp-for="id_setor" class="form-control" asp-items="@ViewBag.setor"></select>
                        </div>
                    </div>
                    <br>

                    <div class="col">
                        <div class="form-group">
                            <label asp-for="id_formaPagamento" class="col-sm col-form-label">Forma de Pagamento:</label>
                            <select asp-for="id_formaPagamento" class="form-control" asp-items="@ViewBag.formaPagamento"></select>
                        </div>
                    </div>
                    <br>
                    <label for="anexo" class="form-label">Anexo:</label>
                    <input type="file" id="anexoFile" name="anexoFile" class="form-control">
                    <input type="hidden" asp-for="anexo" />
                    <br>
                    @if(Model.anexo != null && Model.anexo.Length > 0)
                    {    
                        <a class="btn btn-outline-secondary" href="@Url.Action("DownloadAnexo", "OrdemCompra", new { id = Model.id_oc })">Baixar Anexo atual</a>
                        <br>
                    }
                    else
                    {
                        <p>Sem Anexo</p>
                    }
                    <br>
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <button type="submit" class="btn btn-success" name="submit" value="submit">Atualizar</button>
                </form>
                <form method="post"action="/Material/Delete">
                    <input type="hidden"asp-for="id_oc"/>
                    <button type="submit"class="btn btn-danger">Deletar</button>
                </form>
                    </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script type="text/javascript">
    
        $(document).ready(function () 
        {
            // Select das moedas
            $('#moedaSelect').change(function () {
                var simbolo = $(this).find('option:selected').data('simbolo');
                $('#moedaSimbolo').text(simbolo);
            });
            // Fim - Select das moedas

            // Criação de itens
            let itemIndex = 0;
            $('#btnAdicionarItem').click(function () {
                itemIndex = $('div[id^=itemRow]').length; // para garantir que estamos obtendo o índice correto mesmo após a exclusão de um item.
                const newItemHtml = `
                    <div class="row" id="itemRow${itemIndex}">
                        <div class="col-sm-5">
                            <label for="items[${itemIndex}].item">Item:</label>
                            <input type="text" class="form-control" id="Itens_${itemIndex}__item" name="Itens[${itemIndex}].item" value="" />
                        </div>
                        <div class="col-sm-3">
                            <label for="items[${itemIndex}].quantidade">Quantidade:</label>
                            <input type="number" class="form-control" id="Itens_${itemIndex}__quantidade" name="Itens[${itemIndex}].quantidade" value="" />
                        </div>
                        <div class="col-sm-3">
                            <label for="items[${itemIndex}].valor">Valor:</label>
                            <input type="text" class="form-control" id="Itens_${itemIndex}__valor" name="Itens[${itemIndex}].valor" value="" />
                        </div>
                        <div class="col-sm-1">
                            <button class="btn btn-danger btnRemoverItem" type="button" style="width: 50px; height:50px;margin-top:15px;"><i class="bi bi-trash"></i></button>
                        </div>
                    </div>
                `;
                $('#itensContainer').append(newItemHtml);
                calcularTotal();
                itemIndex++;
            });
            // Fim - Criação de itens

            // Remoção de itens recem add
            $('#itensContainer').on('click', '.btnRemoverItem', function () {
                // Remover a linha correspondente
                $(this).closest('.row').remove();
                calcularTotal();
            });
            // Fim - Remoção de itens recem add

            // Função para calcular o total
            function calcularTotal() 
            {
                var total = 0;
                // Percorrer cada item e calcular o subtotal
                $('.row[id^="itemRow"]').each(function () {
                    var index = $(this).attr('id').replace('itemRow', '');
                    var quantidade = parseInt($('#items\\[' + index + '\\]\\.quantidade').val()) || 0;
                    var valorUnitario = parseFloat($('#items\\[' + index + '\\]\\.valor').val().replace(',', '.')) || 0;
                    var subtotal = quantidade * valorUnitario;
                    total += subtotal;
                });
                // Exibir o total
                $('#displayTotal').text(total.toFixed(2).replace('.', ','));
                // Setar o total ao campo hidden
                $('#total').val(total.toFixed(2).replace('.', ','));
            }
            calcularTotal(); // Chama a função aqui

            // Fim - Função para calcular o total

        });
    </script>
}
