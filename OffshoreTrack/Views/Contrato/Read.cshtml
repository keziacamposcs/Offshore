@model OffshoreTrack.Models.Contrato

@{
    ViewData["Title"] = "Read";
}

<div class="pagetitle">
    <div class="row">
        <div class="col-md-6">
            <h1 class="display-4">Visualização: Contrato</h1>
        </div>
        <div class="col-md-6">
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <a class="btn btn-primary" role="button" asp-area="" asp-controller="Contrato" asp-action="Index">Voltar</a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">

                <div class="row">
                    <div class="col-sm-8">
                        <label for="inputText" class="col-sm col-form-label">Contrato:</label>
                        <input type="text" class="form-control" id="contrato" name="contrato" asp-for="contrato" readonly/>
                    </div>
                    <div class="col-sm-4">
                        <label class="col-form-label">Status:</label>
                        <p class="form-control" readonly>@Model.status?.status</p>
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="col">
                        <label for="inputText" class="col-sm col-form-label">Data de Início:</label>
                        <input type="date" class="form-control" id="dataInicio" name="dataInicio" asp-for="dataInicio" readonly/>
                    </div>
                    <div class="col">
                        <label for="inputText" class="col-sm col-form-label">Data de Validade:</label>
                        <input type="date" class="form-control" id="dataFim" name="dataFim" asp-for="dataFim" readonly/>
                    </div>
                </div>
                <br>

                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label asp-for="id_setor" class="col-form-label">Contrato voltado para o Setor:</label>
                                <p class="form-control" readonly>@Model.setor?.setor</p>
                            <span asp-validation-for="id_setor" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <br>

                <div class="row">
                    <div class="col-sm-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="ehFornecedor" @(Model.id_fornecedor != null ? "checked" : "") disabled>
                            <label class="form-check-label" for="ehFornecedor">
                                É Fornecedor?
                            </label>
                        </div>
                    </div>
                    <div class="col-sm-9">
                        <div class="form-group">
                            @if (Model.id_fornecedor == null)
                            {
                                <p class="form-control" readonly>N/A</p>
                            }
                            else
                            {
                                <label asp-for="fornecedor.fornecedor" class="col-form-label">Fornecedor:</label>
                                <p class="form-control" readonly>@Model.fornecedor?.fornecedor</p>
                            }
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="ehCliente" @(Model.id_cliente != null ? "checked" : "") disabled>
                            <label class="form-check-label" for="ehCliente">
                                É Cliente?
                            </label>
                        </div>
                    </div>
                    <div class="col-sm-9">
                        <div class="form-group">
                            @if (Model.id_cliente == null)
                            {
                                <p class="form-control" readonly>N/A</p>
                            }
                            else
                            {
                                <label asp-for="cliente.cliente" class="col-form-label">Cliente:</label>
                                <p class="form-control" readonly>@Model.cliente?.cliente</p>
                            }
                        </div>
                    </div>
                </div>


                <label for="anexo" class="form-label">Anexo:</label>
                @if(Model.anexo != null && Model.anexo.Length > 0)
                {
                    <a class="btn btn-secondary" href="@Url.Action("DownloadAnexo", "Contrato", new { id = Model.id_contrato })">Baixar Anexo</a>
                    <br>
                }
                else
                {
                    <p>Sem Anexo</p>
                }
                <br />
            </div>
        </div>
    </div>
</div>

